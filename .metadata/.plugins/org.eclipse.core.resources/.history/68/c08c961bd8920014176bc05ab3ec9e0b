#include "LocalServer.hpp"



LocalServer& LocalServer::getInstance()
{
    static LocalServer localServer;
    return localServer;
}

LocalServer::LocalServer(unsigned short port) : port_(port), endpoint_(ip::tcp::v4(), port), acceptor_(ioService_, endpoint_)
{
    accept();
}

void LocalServer::accept()
{
    boost::shared_ptr<ip::tcp::socket> pSocket(new ip::tcp::socket());
    acceptor_.async_accept(*pSocket, boost::bind(&LocalServer::accept, this, pSocket));
}

void LocalServer::handleAccept(boost::shared_ptr<ip::tcp::socket> pSocket)
{

    accept();
}

