#ifndef RPCSERVER_HPP_
#define RPCSERVER_HPP_

class RpcServer
{
public:
	RpcServer(io_service & io_service, unsigned short globalPort = 5556, unsigned short localPort = 5555) : globalAcceptor(io_service, globalPort), localAcceptor(io_service, localPort)
	{

	}

private:
	TcpAcceptor globalAcceptor;
	TcpAcceptor localAcceptor;
};

#endif /* RPCSERVER_HPP_ */
